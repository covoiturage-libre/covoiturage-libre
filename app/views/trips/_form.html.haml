- date_value = @trip.departure_date.present? ? @trip.departure_date.strftime('%d/%m/%Y') : ''
- date_repeat_started_at_value = @trip.repeat_started_at.present? ? @trip.repeat_started_at.strftime('%d/%m/%Y') : ''
- date_repeat_ended_at_value = @trip.repeat_ended_at.present? ? @trip.repeat_ended_at.strftime('%d/%m/%Y') : ''

%p
  %em Les champs précédés d'un astérisque sont obligatoires

= simple_form_for @trip, html: { class: 'form-horizontal', autocomplete: :off } do |f|
  = f.error_notification
  .row
    .col-md-6

      .panel.panel-default
        .panel-heading
          %h3.panel-title Itinéraire et prix global du trajet
        .panel-body
          = f.simple_fields_for :points, @required_points do |p|
            .form-inputs{ id: "city_#{p.object.kind.downcase}" }
              = p.input :city, as: :string, wrapper: :horizontal_form, input_html: { class: "geoname #{'trip-from-city-input' if p.object == @required_points[0]}" }, placeholder: t(p.object.kind.downcase), label: t(p.object.kind.downcase+'_place'), required: true
              = p.input :lon, as: :hidden
              = p.input :lat, as: :hidden
              = p.input :kind, as: :hidden
              = p.input :rank, as: :hidden
          - if Rails.configuration.pricing
            = f.input :price, wrapper: :horizontal_form  do
              = f.input :price, label: false, wrapper: false, error: false, input_html: { min: '0', step: '1', disabled: @trip.price == 0 }
              %input#trip_price_0{name: "trip[price]", type: "checkbox", value: "0", checked: @trip.price == 0}
              %label{for: 'trip_price_0'} Désactiver la tarification
          %br
          %h5 Indiquez des étapes
          %p
            %em (prix à partir de la ville de départ)
          #steps
            - if f.object.errors[:points].any?
              %div.alert.alert-danger
                = f.object.errors[:points].join(' ')
            - index = 0
            = f.simple_fields_for :points, @optional_points do |point|
              = render 'point_fields', f: point
            .links
              = link_to_add_association '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter une étape'.html_safe, f, :points, { class: 'btn btn-default pull-right', render_options: { locals: { rank: index } } }

      .panel.panel-default
        .panel-heading
          %h3.panel-title Date, horaire et détails
        .panel-body
          - if @trip.new_record?
            = f.input :repeat, as: :hidden

            %ul#repeat-tabs.nav.nav-tabs.nav-justified
              %li{ class: @trip.repeat ? '' : 'active' }
                %a{href:"#single", data: { toggle:"tab" }} Trajet ponctuel
              %li{ class: @trip.repeat ? 'active' : '' }
                %a{href:"#repeat", data: { toggle:"tab" }} Trajet récurrent
            </ul>

          .tab-content.pt-3
            #single.pt-3.tab-pane{ class: @trip.repeat ? '' : 'active' }
              = f.input :departure_date, as: :string, wrapper: :horizontal_form, input_html: { value: date_value, class: 'datepicker' }, placeholder: 'Date', required: true
              = f.input :departure_time, as: :time, html5: false, wrapper: :horizontal_form, minute_step: 5 , required: true, input_html: { style: 'display: initial; width: initial;' }, prompt: { hour: '', minute: '' }
            #repeat.pt-3.tab-pane{ class: @trip.repeat ? 'active' : '' }
              .repetitions.clearfix.mb-3
                = f.simple_fields_for :trip_repetitions do |repetition|
                  = render 'trip_repetition_fields', f: repetition
                .links
                  = link_to_add_association '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter un trajet régulier'.html_safe, f, :trip_repetitions, { class: 'btn btn-default pull-right', render_options: { locals: { rank: index } } }
              = f.input :repeat_week, as: :select, wrapper: :horizontal_form, collection: (1..4).to_a.map {|sem| ["Toutes les #{sem if sem > 1} semaines", sem] }, include_blank: false, include_hidden: false
              = f.input :repeat_started_at, as: :string, wrapper: :horizontal_form, input_html: { value: date_repeat_started_at_value, class: 'datepicker' }, placeholder: 'Date', required: true
              = f.input :repeat_ended_at, as: :string, wrapper: :horizontal_form, input_html: { value: date_repeat_ended_at_value, class: 'datepicker' }, placeholder: 'Date', required: true
          = f.input :description, wrapper: :horizontal_form, hint: 'Important, les annonces avec commentaires sont plus efficaces : détails sur votre parcours, sur le lieu précis du départ, sur vos attentes, si vous acceptez les animaux de compagnie, etc.'
          = f.input :total_distance, as: :hidden
          = f.input :total_time, as: :hidden

      - unless user_signed_in?
        .panel.panel-default
          .panel-heading
            %h3.panel-title Vous
          .panel-body
            = f.input :title, as: :radio_buttons, wrapper: :horizontal_radio_and_checkboxes, item_label_class: 'radio-inline', collection: [['Homme', 'M'], ['Femme', 'F']], label: 'Vous êtes'
            = f.input :name, as: :string, wrapper: :horizontal_form
            = f.input :age, as: :integer, wrapper: :horizontal_form, input_html: { min: '0' }
            = f.input :phone, as: :string, wrapper: :horizontal_form, hint: 'Votre numéro de téléphone sera affiché avec l\'annonce. Si vous ne souhaitez pas laisser votre numéro sur le site, ne remplissez pas ce champ'
            = f.input :email, as: :string, wrapper: :horizontal_form, hint: 'Obligatoire et valide. Un message de confirmation vous y sera envoyé.'

      .panel.panel-default
        .panel-heading
          %h3.panel-title Votre véhicule
        .panel-body
          = f.input :seats, wrapper: :horizontal_form, input_html: { min: '0' }, collection: 0..8
          = f.input :comfort, wrapper: :horizontal_form, collection: Trip::CAR_RATINGS.map(&:to_sym)
          = f.input :smoking, as: :radio_buttons, wrapper: :horizontal_radio_and_checkboxes, item_label_class: 'radio-inline'


      .row
        .col-md-6
          -if @trip.new_record?
            %div{style: "padding-left: 15px;"}= f.input :terms_of_service, label: "Je valide les #{link_to('CGUs', '/cgus', target: '_blank')}".html_safe
        .col-md-6
          = f.button :submit, class: 'btn btn-primary btn-lg pull-right', style: 'margin-bottom: 1em;'

    .col-md-6
      .panel.panel-default
        .panel-body
          #route-wrapper
            #route
      #distance_and_time.pull-right

- content_for :javascript_footer do
  :javascript
    // City name autocomplete, calendar popup and routing map
    $('.geoname').geonameAutocomplete();

    $('.datepicker').datepicker({
      dateFormat: "dd/mm/yy",
      minDate: 0
    })

    $('#trip_price_0').on('change', function(e) {
      $('#trip_price').prop('disabled', $(this).is(':checked')).val(0);
    });

    $('#repeat-tabs a').click(function (e) {
      $('input[name="trip[repeat]"]').val(/#repeat$/.test($(this).prop('href')));
    })

    $('#steps').on('cocoon:after-insert', function(e, step) {
      $(step).find('.geoname').geonameAutocomplete();
    });

    var myMap = L.map('route').setView([46.227638, 2.213749], 5);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '© OpenStreetMap contributors'
    }).addTo(myMap);

    var myRouting = L.Routing.control({
      plan: L.Routing.plan([], {
        draggableWaypoints: false, // disable live edit on map
        addWaypoints: false,
      }),
      routeWhileDragging: true,
      show: false, // setting show to false hides the directions text block
      // disable live edit on map
      lineOptions : {
        addWaypoints: false
      }
    }).addTo(myMap);

    var initialTripPoints = #{raw @trip.points.sort { |x, y| (x.rank.nil? || y.rank.nil?) ? 0 : x.rank <=> y.rank }.map { |point| [point.lat.to_f, point.lon.to_f] }};
    var myTripDrawing = (new TripDrawing());
    myTripDrawing.init(myRouting, initialTripPoints, #{Trip::STEPS_MAX_RANK});

    // Sortabe steps

    $( '#steps' ).sortable({
      handle: '.handle',
      placeholder: 'step-placeholder'
    });
    $( '#steps' ).disableSelection();
